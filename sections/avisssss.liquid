{% comment %}
  simple-testimonial-slider.liquid
  Carrousel d'avis clients compact avec espacement réduit
{% endcomment %}

<div class="simple-testimonial-slider-section">
  <div class="simple-testimonial-container">
    <div class="simple-testimonial-track" id="testimonial-track">
      {% for block in section.blocks %}
        <div class="simple-testimonial-slide" {{ block.shopify_attributes }}>
          <img 
            src="{{ block.settings.image | img_url: '800x' }}" 
            alt="{{ block.settings.alt_text | escape }}" 
            loading="lazy"
            class="simple-testimonial-image"
          >
        </div>
      {% endfor %}
    </div>
    
    <button type="button" class="simple-slider-button simple-prev-button" aria-label="Précédent">
      &larr;
    </button>
    <button type="button" class="simple-slider-button simple-next-button" aria-label="Suivant">
      &rarr;
    </button>
    
    <div class="simple-dots-container">
      {% for block in section.blocks %}
        <button type="button" class="simple-dot-button{% if forloop.first %} active{% endif %}" data-index="{{ forloop.index0 }}" aria-label="Aller à l'avis {{ forloop.index }}"></button>
      {% endfor %}
    </div>
  </div>
</div>

{% stylesheet %}

.simple-testimonial-slider-section {
  padding: 0;
  margin: 0;
  line-height: 0; /* Élimine l'espace supplémentaire causé par line-height */
}

.simple-testimonial-container {
  max-width: 100%;
  margin: 0;
  padding: 0;
  font-size: 0; /* Élimine les espaces blancs entre éléments inline */
}

.simple-testimonial-track {
  display: flex;
  transition: transform 0.5s ease;
  margin: 0;
  padding: 0;
}

.simple-testimonial-slide {
  min-width: 100%;
  flex: 0 0 100%;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
}

.simple-testimonial-image {
  max-width: 100%;
  height: auto;
  display: block;
  margin: 0;
  padding: 0;
  border: none;
  border-radius: 0;
  box-shadow: none;
}

.simple-dots-container {
  display: flex;
  justify-content: center;
  margin: 5px 0; /* Réduction significative de la marge autour des points */
  padding: 0;
  gap: 5px;
  line-height: normal; /* Restaure line-height normal uniquement pour les points */
  font-size: 10px; /* Restaure une taille de police pour cette section */
}

/* Ajoutez ces styles pour contrôler la hauteur de la section */
.section-no-padding {
  padding: 0 !important;
  margin: 0 !important;
}

/* Si votre thème a des marges/paddings par défaut sur les sections */
.section {
  padding: 0 !important;
  margin: 0 !important;
}

{% endstylesheet %}

{% javascript %}
document.addEventListener('DOMContentLoaded', function() {
  const track = document.getElementById('testimonial-track');
  if (!track) return;
  
  const slides = track.querySelectorAll('.simple-testimonial-slide');
  const prevButton = document.querySelector('.simple-prev-button');
  const nextButton = document.querySelector('.simple-next-button');
  const dots = document.querySelectorAll('.simple-dot-button');
  let currentIndex = 0;
  
  // Initialize
  updateSlider();
  
  // Navigation buttons
  if (prevButton) {
    prevButton.addEventListener('click', function() {
      currentIndex = (currentIndex - 1 + slides.length) % slides.length;
      updateSlider();
    });
  }
  
  if (nextButton) {
    nextButton.addEventListener('click', function() {
      currentIndex = (currentIndex + 1) % slides.length;
      updateSlider();
    });
  }
  
  // Dot navigation
  dots.forEach(function(dot) {
    dot.addEventListener('click', function() {
      currentIndex = parseInt(this.getAttribute('data-index'));
      updateSlider();
    });
  });
  
  // Update slider position and active dot
  function updateSlider() {
    // Move track
    track.style.transform = `translateX(-${currentIndex * 100}%)`;
    
    // Update dots
    dots.forEach(function(dot, index) {
      dot.classList.toggle('active', index === currentIndex);
    });
  }
  
  // Optional: Touch swipe support for mobile
  let touchStartX = 0;
  
  track.addEventListener('touchstart', function(e) {
    touchStartX = e.changedTouches[0].clientX;
  }, {passive: true});
  
  track.addEventListener('touchend', function(e) {
    const touchEndX = e.changedTouches[0].clientX;
    const diff = touchStartX - touchEndX;
    
    if (Math.abs(diff) > 50) { // Minimum swipe distance
      if (diff > 0) {
        // Swipe left - go to next
        currentIndex = (currentIndex + 1) % slides.length;
      } else {
        // Swipe right - go to previous
        currentIndex = (currentIndex - 1 + slides.length) % slides.length;
      }
      updateSlider();
    }
  }, {passive: true});
});
{% endjavascript %}

